{% extends 'base.html.twig' %}

{% block title %}Chair list {% endblock %}

{% block body %}

<h1>Chairs</h1>
<ul>
   {% for chair in lounge.manytomany %}
   <li>
     <a href="{{ path('app_lounge_chair_show', {'lounge_id': lounge.id, 'chair_id' : chair.id}) }}">{{ chair }}</a>

     <h2>{{chair.Name}}</h2>

      {% dump chair %}

      <table class="table">
          <tbody>

              <tr>
                  <th>Description</th>
                  <td>{{ chair.Description }}</td>
              </tr>

              <tr>
                  <th>Rarity</th>
                  <td>{{ chair.rarity }}</td>
              </tr> 

              <tr>
                  <th>Number of Legs</th>
                  <td>{{ chair.nbLegs }}</td>
              </tr> 

              <tr>
                <a href="{{ path('stack_show', {'id': chair.getChairToStack.id }) }}"> Aller au stack</a>
              </tr>

          </tbody>
      </table>
   </li>
   {% endfor %}
</ul>

      

<a href="{{ path('app_lounge_show', { 'id': lounge.id}) }}">back to lounge</a>

{% endblock %}